<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="50dp"
    android:gravity="center"
    tools:context=".activities.MainActivity">

    <Button
        android:id="@+id/btnTesteServidor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Conectar com o Servidor" />

    <Button
        android:id="@+id/btnTesteMotoristaAPI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="API Motorista" />

    <Button
        android:id="@+id/btnTestePasageiroAPI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="API Passageiro" />

    <Button
        android:id="@+id/btnTesteViagemAPI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="API Viagem" />

</LinearLayout>
